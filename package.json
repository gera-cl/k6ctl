{
  "name": "k6ctl",
  "version": "0.1.4",
  "description": "CLI tool to run k6 tests on Kubernetes using k6-operator",
  "main": "dist/index.js",
  "bin": {
    "k6ctl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test:unit": "jest -c test/unit/jest.config.unit.js",
    "test:integration": "jest -c test/integration/jest.config.integration.js"
  },
  "keywords": [
    "k6",
    "kubernetes",
    "k6-operator",
    "load-testing",
    "performance-testing",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "commander": "^14.0.3",
    "dotenv": "^17.3.1",
    "js-yaml": "^4.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
