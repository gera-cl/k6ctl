{
  "name": "k6ctl",
  "version": "0.1.4",
  "description": "CLI tool to run k6 tests on Kubernetes using k6-operator",
  "main": "dist/index.js",
  "bin": {
    "k6ctl": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "demo": "npm run build && node dist/demo-env.js"
  },
  "keywords": [
    "k6",
    "kubernetes",
    "k6-operator",
    "load-testing",
    "performance-testing",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@kubernetes/client-node": "^1.4.0",
    "commander": "^14.0.3",
    "dotenv": "^16.4.7",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.3",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
